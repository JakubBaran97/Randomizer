@{
}



<table class="table">
    <thead>
        <tr>
            
            <th>My Menu</th>
          

            <th></th>
        </tr>
    </thead>
    <tbody>
        @model List<Menu>

        @foreach (var menu in Model)
        {
            <tr>
               
                <th>@menu.Name</th>


                
                <th>@Html.ActionLink("Create", "CreateProduct", "Randomizer", new { id = menu.Id }, new { @class = "btn btn-danger" })</th>
               
                <th>@Html.ActionLink("List of Product", "ProductList", "Randomizer", new { id = menu.Id }, new { @class = "btn btn-danger" })</th>
                
                <th>@Html.ActionLink("Draw", "Randomize", "Randomizer", new { id = menu.Id }, new { @class = "btn btn-danger" })</th>
                
                <th>@Html.ActionLink("Delete", "DeleteMenu", "Randomizer", new { id = menu.Id }, new { @class = "btn btn-danger" })</th>

                <th>@Html.ActionLink("Generate QR Code", "GenerateQRCodeForMenu", "Randomizer", new { menuId = menu.Id }, new { @class = "btn btn-primary" })</th>
                
                


            </tr>
        }
    </tbody>
    </table>



