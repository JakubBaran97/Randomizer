@model Menu


@using (Html.BeginForm("EditMenu", "Randomizer", FormMethod.Post))

{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Your Razor Page</title>
        <link rel="stylesheet" href="~/css/mystyles.css" asp-append-version="true" />
        <style>

            #panel {
                width: 400px;
                margin: 0 auto;
                padding: 15px 0 0;
                background: #fff;
                border: 1px solid silver;
                font: 16px calibri;
                letter-spacing: -1px;
                -webkit-box-shadow: 0 0 2px silver;
                -moz-box-shadow: 0 0 2px silver;
                box-shadow: 0 0 2px silver;
            }

            label {
                display: block;
                width: 260px;
                padding: 10px 20px;
                color: #696969;
                font-size: 16px;
                text-shadow: 0 0 1px silver;
            }

            #name {
                display: block;
                width: 360px;
                margin: 0 auto;
                padding: 10px 5px;
                border: 1px solid silver;
                outline: 5px solid #ebebeb;
                font-size: 22px;
            }

                #name:focus {
                    outline: 5px solid #e5f2f8;
                }

            #lower {
                background: #ecf2f5;
                width: 100%;
                padding: 5px 20px;
                margin-top: 20px;
            }



          

            #panel {
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
            }

            .button {
                display: inline-block;
                padding: 10px 20px;
                background: #98c9dc;
                border: 1px solid #005f85;
                color: white;
                text-decoration: none;
                border-radius: 5px;
                cursor: pointer;
                text-align: center;
                width: 30%;
                text-shadow: 0 0 1px black;
            }

                .button:hover {
                    background: #98c9dc;
                    border: 1px solid #005f85;
                    color: white;
                    text-decoration: none;
                    border-radius: 5px;
                    cursor: pointer;
                    text-align: center;
                    width: 30%;
                    text-shadow: 0 0 1px black;
                }

            .button-container {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

        </style>
    </head>
    <body>
        <div id="panel">
            <form>

                <center><b>Edit Menu</b></center>

                @Html.LabelFor(model => model.Name, "Edit your menu")
                @Html.TextBoxFor(model => model.Name, new {type = "text", id = "name"})


                <div id="lower">

                    <input type="submit" value="Edit" class="button">
                    <a href="@Url.Action("DeleteMenu", "Randomizer", new { id = Model.Id })" class="button">Delete</a>
                </div>
            </form>
        </div>
    </body>
    </html>
}

























